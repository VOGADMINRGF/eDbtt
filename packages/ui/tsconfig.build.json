{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "noEmit": false,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {},                  // self-alias vermeiden
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["**/*.test.*", "**/__tests__/**"]
}
