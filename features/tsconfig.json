{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@features/*": ["./*"],
      "@core/*": ["../core/*"],
      "@contribution/*": ["../contribution/*"],
      "@packages/*": ["../packages/*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist", "build"]
}
