{
  "name": "vpm25",
  "private": true,
  "packageManager": "pnpm@10.17.1",
  "workspaces": [
    "apps/*",
    "packages/*",
    "features",
    "core"
  ],
  "scripts": {
    "dev:landing": "pnpm --filter @vog/landing dev",
    "build:landing": "pnpm -w prisma:gen && pnpm --filter @vog/landing build",
    "start:landing": "pnpm --filter @vog/landing start",
    "dev:web": "pnpm --filter @vog/web run dev",
    "build:web": "pnpm -w run prisma:gen && pnpm --filter @vog/web run build",
    "start:web": "pnpm --filter @vog/web start",
    "build:ui": "pnpm --filter @vog/ui build",
    "build": "pnpm run build:ui && pnpm run build:web",
    "prisma:gen:web": "pnpm -w dlx prisma generate --schema=prisma/web/schema.prisma",
    "prisma:gen:core": "pnpm -w dlx prisma generate --schema=prisma/core/schema.prisma",
    "prisma:gen": "pnpm -w run prisma:gen:core && pnpm -w run prisma:gen:web",
    "prisma:migrate:core": "prisma migrate deploy --schema=prisma/core/schema.prisma",
    "prisma:migrate:web": "prisma migrate deploy --schema=prisma/web/schema.prisma",
    "prisma:migrate": "pnpm -w prisma:migrate:core && pnpm -w prisma:migrate:web",
    "postinstall": "pnpm -w run prisma:gen:web",
    "check:web": "pnpm -w exec tsc --noEmit -p apps/web/tsconfig.public.json",
    "check:repo": "pnpm -w exec tsc --noEmit -p tsconfig.base.json",
    "lint:fix:web": "bash ./scripts/lint-fix.sh",
    "lint:clean": "node tools/reperatur/41-lint-warnings-clean.mjs",
    "typecheck": "pnpm -w exec tsc --noEmit -p apps/web/tsconfig.json",
    "lint": "turbo run lint --continue",
    "e200": "pnpm run typecheck && pnpm run lint",
    "tc": "turbo run typecheck --continue",
    "tc:web": "pnpm -C apps/web exec tsc --noEmit -p tsconfig.json",
    "lint:web": "pnpm -C apps/web exec eslint --cache --cache-location .eslintcache --config apps/web/eslint.config.js 'apps/web/src/**/*.{ts,tsx}'",
    "tc:web:w": "pnpm -C apps/web exec tsc -w -p tsconfig.json --noEmit",
    "tc:web:watch": "pnpm -C apps/web exec tsc -w --noEmit -p tsconfig.json"
  },
  "pnpm": {
    "overrides": {
      "mongodb": "6.20.0",
      "mongoose>mongodb": "6.20.0"
    },
    "onlyBuiltDependencies": [
      "@prisma/client",
      "prisma",
      "@prisma/engines",
      "sharp",
      "esbuild",
      "msgpackr-extract",
      "unrs-resolver"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.901.0",
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "6.16.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@upstash/redis": "^1.35.4",
    "arangojs": "^10.1.2",
    "axios": "^1.12.2",
    "bullmq": "^5.58.8",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "fast-xml-parser": "^5.3.0",
    "framer-motion": "^12.23.22",
    "he": "^1.2.0",
    "html2canvas": "^1.4.1",
    "iconv-lite": "^0.7.0",
    "ioredis": "^5.8.0",
    "jose": "^6.1.0",
    "jspdf": "^3.0.3",
    "lucide-react": "^0.545.0",
    "maplibre-gl": "^5.8.0",
    "mongodb": "^6.20.0",
    "mongoose": "^8.18.3",
    "neo4j-driver": "^5.28.2",
    "next-auth": "^4.24.11",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.6",
    "ol": "^10.6.1",
    "ol-mapbox-style": "^13.1.0",
    "openai": "^4.104.0",
    "pino": "^10.0.0",
    "qrcode": "^1.5.4",
    "react-beautiful-dnd": "^13.1.1",
    "react-hot-toast": "^2.6.0",
    "react-icons": "^4.12.0",
    "react-qr-code": "^2.0.18",
    "recharts": "^3.2.1",
    "redis": "^5.8.2",
    "rss-parser": "^3.13.0",
    "sanitize-html": "^2.17.0",
    "server-only": "^0.0.1",
    "swr": "^2.3.6",
    "ulid": "^3.0.1",
    "uuid": "^13.0.0",
    "xlsx": "^0.18.5",
    "youtube-transcript": "^1.2.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.37.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.14",
    "@tailwindcss/typography": "^0.5.19",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.20",
    "@types/node": "^20.19.17",
    "@types/nodemailer": "^7.0.2",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.37.0",
    "eslint-plugin-react-hooks": "^6.1.1",
    "fast-glob": "^3.3.3",
    "glob": "^11.0.3",
    "jscodeshift": "^17.3.0",
    "postcss": "^8.5.6",
    "prisma": "6.16.3",
    "tailwindcss": "^4.1.14",
    "ts-morph": "^27.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "turbo": "2.5.10"
  },
  "engines": {
    "node": "20.x"
  }
}